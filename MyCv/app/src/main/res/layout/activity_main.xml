<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/my_gradient_drawable"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/photo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/titrePrenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Vivien"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/titreNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Sobra 18 ans"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/titreEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="sobra.vivien@gmail.com"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/titreAdresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="197 bd Davout 75020 Paris"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/titreTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="0662812863"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/logostete"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_weight="2"
                android:src="@drawable/ic_baseline_account_circle_24" />

            <ImageView
                android:id="@+id/logosemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_alternate_email_24" />
            <ImageView
                android:id="@+id/logosrue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_house_24" />
            <ImageView
                android:id="@+id/logostel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_phone_iphone_24" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/titrePoste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Développeur web et web mobile"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/titrePhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Inserer phrase de motivation"
            android:textSize="30dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipComp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compétences"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="30dp" />


        <com.google.android.material.chip.Chip
            android:id="@+id/chipForma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formations"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="30dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipReal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Réalisations"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="30dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipExpe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experience"
            android:textAlignment="center"
            android:textColor="@color/light_blue"
            android:textSize="30dp"
            />
    </LinearLayout>
</LinearLayout>